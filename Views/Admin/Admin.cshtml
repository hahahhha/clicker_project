@model AdminViewModel

@{
    Layout = null;
}
@* удаление сделал кое как *@
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.8/dist/css/bootstrap.min.css" 
    rel="stylesheet" integrity="sha384-sRIl4kxILFvY47J16cr9ZwB07vP4J8+LH7qKQnuqkuIAvNWLzeN8tE5YBujZqJLB" 
    crossorigin="anonymous" />
    @* Для иконок *@
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />
    <link href="~/css/admin.css" rel="stylesheet"/>
    @* <link rel="stylesheet" href="admin.css"> *@

    <!-- Font -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Geologica:wght@100..900&display=swap" rel="stylesheet">

    <title>Admin page</title>
</head>
<body>
    <header class="admin-header">
        <div class="header-wrapper d-flex justify-content-between align-items-center mx-auto ">
            <div class="title-header-block">
                <a class="logo-href" href="/admin"><i class="fas fa-rocket"></i>  Управление бустами</a>
                <span>Добавляйте, редактируйте и удаляйте бусты для кликера</span>
            </div>
            <div class="header-buttons-block">
                <a href="/" class="btn btn-outline-light mx-2">
                    <i class="fas fa-arrow-left me-1"></i>Назад
                </a>
                <button class="btn btn-outline-light create-boost-button">
                    <i class="fas fa-plus me-1"></i>Добавить буст
                </button>
            </div>
        </div>
    </header>
    <main class="container mx-auto d-flex flex-row mt-4 justify-content-between">
        <div class="sidebar shadow-sm p-3 mb-5 rounded">
            <h2 class="h4 mb-4 pb-2">Панель управления</h2>
            <ul class="list-unstyled m-0 p-0">
                <li class="mb-3">
                    <a href="#" class="text-decoration-none d-flex align-items-center p-2 rounded bg-primary text-white">
                        <i class="fas fa-bolt me-3"></i> 
                        <span>Бусты</span>
                    </a>
                </li>
                <li class="mb-3">
                    <a href="#" class="text-decoration-none d-flex align-items-center p-2 rounded text-dark hover-bg">
                        <i class="fas fa-users me-3"></i> 
                        <span>Пользователи</span>
                    </a>
                </li>
                <li class="mb-3">
                    <a href="#" class="text-decoration-none d-flex align-items-center p-2 rounded text-dark hover-bg">
                        <i class="fas fa-chart-line me-3"></i> 
                        <span>Статистика</span>
                    </a>
                </li>
                <li class="mb-0 border-top">
                    <a href="/" class="text-decoration-none d-flex align-items-center p-2 rounded text-dark hover-bg">
                        <i class="fas fa-home me-3"></i> 
                        <span>Играть</span>
                    </a>
                </li>
            </ul>
        </div>
        <div class="admin-container">
            <div class="search-block d-flex mb-4">
                <input type="text" class="form-control me-3" placeholder="Искать буст по названию">
                <button class="btn btn-outline-secondary" type="button" id="button-addon2">Поиск</button>
            </div>
            <div class="table-wrap table-responsive rounded-3 shadow-sm overflow-hidden">
                <table class="table table-hover mb-0 boosts-table">
                    <thead class="boost-table-theadd">
                        <tr>
                            <th class="text-center p-2">Id</th>
                            <th class="p-2">Буст</th>
                            <th class="text-center p-2">Цена</th>
                            <th class="text-center p-2">Действия</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach(var boost in Model.Boosts)
                        {
                            <tr>
                                <td class="text-center fw-bold">@boost.Id</td>
                                <td>
                                    <div class="d-flex align-items-center">
                                        <i class="fas fa-bolt text-warning me-2"></i>
                                        <span>@boost.Title</span>
                                    </div>
                                </td>
                                <td class="text-center">
                                    <span class="badge bg-success">@boost.Price золота</span>
                                </td>
                                <td>
                                    <div class="d-flex justify-content-center gap-2">
                                        <button class="btn btn-sm btn-outline-danger delete-boost-btn" data-id="@boost.Id">
                                            <i class="fas fa-trash me-1"></i> Удалить
                                        </button>
                                        <button class="btn btn-sm btn-outline-primary">
                                            <i class="fas fa-edit me-1"></i> Изменить
                                        </button>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </main>



    @* Модальное окно для создания буста *@
    <div class="modal fade create-boost-modal" tabindex="-1" id="createBoostModal">
        <div class="modal-dialog px-3">
            <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Создание буста</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form id="createBoostForm">
                    <div class="mb-3">
                        <label for="titleInput" class="form-label">Название</label>
                        <input name="Title" type="text" class="form-control" id="titleInput" placeholder="Придумайте название">
                    </div>
                    <div class="mb-3">
                        <label for="priceInput" class="form-label">Цена</label>
                        <input name="Price" type="number" class="form-control" id="priceInput" placeholder="Установите цену">
                    </div>
                    <div class="mb-3">
                        <label for="profitInput" class="form-label">Профит</label>
                        <input name="Profit" type="number" class="form-control" id="profitInput" placeholder="Установите профит буста">
                    </div>
                    <div class="mb-3 mt-3">
                        <label for="formFile" class="form-label">Изображение</label>
                        <input name="Image" class="form-control" type="file" id="imageFileInput">
                    </div>
                    <div class="form-check mb-3">
                        <input name="IsAuto" class="form-check-input" type="checkbox" value="" id="isAutomaticInput">
                        <label class="form-check-label" for="isAutomaticInput">
                            Автоматический буст
                        </label>
                    </div>
                    
                    <div class="modal-footer">
                        <button type="submit" class="btn btn-primary">Создать</button>
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Отмена</button>
                    </div>
                </form>
            </div>
            </div>
        </div>
    </div>


    @* Модальное окно с подтверждением удаления буста *@
    <div class="modal fade confirm-delete-modal" tabindex="-1" id="confirmDeleteModal" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Подтверждение удаления</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    Вы уверены, что хотите удалить этот буст? Это действие нельзя отменить.
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Отмена</button>
                    <button type="button" class="btn btn-danger" id="confirmDeleteBtn">Удалить</button>
                </div>
            </div>
        </div>
    </div>


    <script src="~/js/adminn.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.8/dist/js/bootstrap.bundle.min.js" integrity="sha384-FKyoEForCGlyvwx9Hj09JcYn3nv7wiPVlz7YYwJrWVcXK/BmnVDxM+D2scQbITxI" crossorigin="anonymous"></script>
</body>
</html>